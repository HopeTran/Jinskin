@model List<Jinskin.Framework.Category>
@{
    ViewBag.Title = "CategoryAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="panel-heading">
    <h1>Category List</h1>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Created Date</th>
                            <th>Order</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@(item.CreatedDate.HasValue ? item.CreatedDate.Value.ToString("dd/MM/yyyy") : "")</td>
                                <td class="center">@item.Order.GetValueOrDefault(0)</td>
                                <td class="center">@(item.Status.GetValueOrDefault(false) ? "Actice" : "Blocked")</td>
                            </tr>
                        }


                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
